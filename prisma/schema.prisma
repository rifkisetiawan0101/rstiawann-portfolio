// rstiawann-portfolio/prisma/schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Skill {
    id        BigInt   @id @default(autoincrement())
    name      String   @unique
    logo      String
    type      String
    level     String
    groups    String[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Project {
    id            BigInt   @id @default(autoincrement())
    title         String   @unique
    category      Category
    overview      String
    image         String
    tags          String[]
    contributions String[]
    links         Json
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

model Education {
    id          BigInt   @id @default(autoincrement())
    institution String
    degree      String
    period      String
    description String
    logo        String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model Achievement {
    id               BigInt   @id @default(autoincrement())
    title            String
    description      String
    logo             String
    certificateImage String?
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt
}

enum Category {
    FULLSTACK
    GAME
    OTHER
}
